{
  "env": {
    "node": true,
    "es6" : true
  },

  "extends": "eslint:recommended",

  "overrides": [
    {
      "files": [ "packages/*/test/**/*.js" ],
      "env"  : {
        "mocha": true
      }
    }
  ],

  "parserOptions": {
    "sourceType": "module"
  },

  "plugins": [ "react" ],

  "rules": {
    "indent"         : [ "error", 4 ],
    "linebreak-style": [ "error", "unix" ],
    "quotes"         : [ "error", "single" ],
    "semi"           : [ "error", "always" ],
    "no-var"         : [ "error" ]
  }
}
